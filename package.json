{
	"name": "obsidian-boxoffice",
	"version": "1.0.0",
	"description": "An Obsidian plugin to manage your movie collection and watchlist directly in your vault.",
	"author": "Vittorio Scaperrotta",
	"main": "main.js",
	"engines": {
		"node": "22.16.0"
	},
	"scripts": {
		"dev": "concurrently \"npm run watch:sass\" \"node esbuild.config.mjs\"",
		"build:sass": "sass src/styles/main.scss:styles.css --no-source-map --style=compressed",
		"watch:sass": "sass --watch src/styles/main.scss:styles.css --no-source-map --style=expanded",
		"prebuild": "npm run build:sass",
		"build": "tsc -noEmit -skipLibCheck && node esbuild.config.mjs production",
		"version": "node version-bump.mjs && git add manifest.json versions.json"
	},
	"keywords": [
		"obsidian",
		"obsidian-plugin",
		"plugin",
		"movie",
		"cinema",
		"vault",
		"boxoffice",
		"collection",
		"watchlist"
	],
	"license": "MIT",
	"devDependencies": {
		"@types/node": "^16.11.6",
		"@typescript-eslint/eslint-plugin": "5.29.0",
		"@typescript-eslint/parser": "5.29.0",
		"builtin-modules": "3.3.0",
		"concurrently": "^8.2.2",
		"esbuild": "0.17.3",
		"obsidian": "latest",
		"sass": "^1.97.3",
		"tslib": "2.4.0",
		"typescript": "4.7.4"
	}
}